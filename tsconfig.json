{
  "include": ["./src/**/*", "./test/**/*"],
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "outDir": "./out",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
